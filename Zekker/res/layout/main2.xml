<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" android:padding="10sp">

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textAppearance="?android:attr/textAppearanceLarge" android:layout_gravity="right|center_vertical"
        android:paddingRight="10sp" android:layout_marginBottom="30sp" android:layout_marginTop="20sp"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" android:layout_gravity="center"
        android:paddingTop="50sp"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="288dp"
        android:layout_height="fill_parent"

        android:layout_gravity="center" android:layout_marginTop="14dp"/>

</LinearLayout>